<h1>Create a new Pet</h1>
<form action="/pets" method="post">
  <label>Name: </label><br>
  <input type="text" id="pet_name" name="pet[name]"><br>
  <% @owners.each do |owner| %>
    <label><%= owner.name %></label>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"> <br>
  <% end %>
  <h3>New Owner</h3>
  <label>Owner Name:</label><br>
  <input type="text" name="owner[name]" id="owner_name"><br>
<% %>
  <input type="submit" value="Create Pet" >
</form>
